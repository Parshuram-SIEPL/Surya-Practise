<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testClasses.SelectionTestActivity">


    <CheckBox
        android:id="@+id/checkFullDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@drawable/checkbox_design"
        tools:text="Full Day" />

    <CheckBox
        android:id="@+id/checkFirstHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkFullDay"
        android:buttonTint="@drawable/checkbox_design"
        tools:text="First Half" />

    <CheckBox
        android:id="@+id/checkSecondHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkFirstHalf"
        android:buttonTint="@drawable/checkbox_design"
        tools:text="Second Half" />


</RelativeLayout>