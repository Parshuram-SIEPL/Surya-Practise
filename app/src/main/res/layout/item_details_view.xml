<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:padding="2dp"
            android:background="@drawable/leave_cover_item_background"
            >

            <TextView
                android:id="@+id/dateTagRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Date"
                android:textColor="@color/liteGrey1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dateHolderRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateTagRecycler"
                android:layout_margin="3dp"
                android:text="Date Holder"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/leaveTypeTagRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:text="Leave Type"
                android:textColor="@color/liteGrey1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/leaveTypeHolderRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leaveTypeTagRecycler"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:text="F Day"
                android:textSize="15sp" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>